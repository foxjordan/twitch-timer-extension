# syntax=docker/dockerfile:1
FROM node:20-alpine

WORKDIR /app/ebs

# Install prod deps first for better layer caching
COPY ebs/package.json ebs/package-lock.json ./
RUN npm ci --omit=dev

# Copy source
COPY ebs/ ./

# Create data dir (volume may mount here in Fly)
ENV DATA_DIR=/data
RUN mkdir -p /data

EXPOSE 8080
CMD ["node", "server.js"]

